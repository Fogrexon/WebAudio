{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": ["error", {
            "ts": "never",
            "js": "never",
            "jsx": "never",
            "tsx": "never"
          }],
        "import/no-unresolved": [
            "warn"
        ]
    }
}
